# API Keys
SONAR_API_KEY=your_sonar_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=a_very_long_secret_value_at_least_32_chars

# OAuth Providers
GITHUB_ID=your_github_client_id
GITHUB_SECRET=your_github_client_secret

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Database options
# Option 1: Use local storage (for development without database)
USE_LOCAL_STORAGE=true

# Option 2: Use PostgreSQL/Neon database (recommended for production)
# DATABASE_URL="postgresql://username:password@hostname:port/database?sslmode=require"

# If you're having database connection issues, use the fallback option below
# This will display mock data while you troubleshoot your database connection
USE_DB_FALLBACK=true
